    <refnamediv>
        <refname>glGetMaterial</refname>
        <refpurpose>return material parameters</refpurpose>
    </refnamediv>
    <refsynopsisdiv>
        <funcsynopsis>
            <funcprototype>
                <funcdef>void <function>glGetMaterialfv</function></funcdef>
                <paramdef>GLenum <parameter>face</parameter></paramdef>
