    <refnamediv>
        <refname>glFogCoord</refname>
        <refpurpose>set the current fog coordinates</refpurpose>
    </refnamediv>
    <refsynopsisdiv>
        <funcsynopsis>
            <funcprototype>
                <funcdef>void <function>glFogCoordd</function></funcdef>
                <paramdef>GLdouble <parameter>coord</parameter></paramdef>
