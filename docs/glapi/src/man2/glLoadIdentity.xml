    <refnamediv>
        <refname>glLoadIdentity</refname>
        <refpurpose>replace the current matrix with the identity matrix</refpurpose>
    </refnamediv>
    <refsynopsisdiv>
        <funcsynopsis>
            <funcprototype>
                <funcdef>void <function>glLoadIdentity</function></funcdef>
                <paramdef> <parameter>void</parameter></paramdef>
